<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EXIGÊNCIAS PARA APADRINHAMENTO"
            android:textColor="@color/TextYellow"
            android:textSize="12dp"/>

        <CheckBox
            android:id="@id/checkbox_termo_apadrinhamento"
            android:text="Termo de apadrinhamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </CheckBox>
        <CheckBox
            android:id="@id/checkbox_auxilio_financeiro"
            android:text="Auxílio financeiro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </CheckBox>

        <CheckBox
            android:id="@id/checkbox_alimentacao"
            android:text="Alimentação"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp">
        </CheckBox>
        <CheckBox
            android:id="@id/checkbox_saude_apadrinhamento"
            android:text="Saúde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp">
        </CheckBox>
        <CheckBox
            android:id="@id/checkbox_objetos_apadrinhamento"
            android:text="Objetos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp">
        </CheckBox>
        <CheckBox
            android:id="@id/checkbox_visita_animal_apadrinhamento"
            android:text="Visitas ao animal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </CheckBox>


        <!--ajudar-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NECESSIDADES DO ANIMAL"
            android:textColor="@color/TextYellow"
            android:textSize="12dp"/>

        <CheckBox
            android:id="@id/checkbox_alimento_ajudar"
            android:text="Alimento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </CheckBox>
        <CheckBox
            android:id="@id/checkbox_auxilio_financeiro_ajudar"
            android:text="Auxílio financeiro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </CheckBox>
        <CheckBox
            android:id="@id/checkbox_medicamento_ajudar"
            android:text="Medicamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </CheckBox>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@id/detalhes_medicamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome do medicamento"
                android:maxLines="1"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>

        <CheckBox
            android:id="@id/objetos_ajudar"
            android:text="Objetos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </CheckBox>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@id/detalhes_objetos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Especifique o(s) objeto(s)"
                android:maxLines="1"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>
</FrameLayout>