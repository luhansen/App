<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/BackgroundColor">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_comportamento"
            android:layout_gravity="center"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="10dp"
            android:background="@color/CardColorBack"
            android:layout_margin="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/card_comportamento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Comportamento"
                    android:background="@color/BackColorMenuDicasGreen"
                    android:paddingVertical="8dp"
                    android:dropDownWidth="fill_parent"
                    android:paddingHorizontal="8dp"
                    android:textColor="@color/TextColorGreenBack"
                    android:spinnerMode="dropdown"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cão vs gato: qual deve ser o seu bichinho?"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="8dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Como lidar com pets muito agitados"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="8dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Porque alguns animais não gostam de crianças?"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="8dp"/>
                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_saude"
            android:layout_gravity="center"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="10dp"
            android:background="@color/CardColorBack"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/card_saude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Alimentacao"
                    android:background="@color/BackColorMenuDicasGreen"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="8dp"
                    android:textColor="@color/TextColorGreenBack"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="A importância de alimentar o pet com ração"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="8dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Quais frutas você pode e não pode dar ao seu pet"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="8dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Como escolho a melhor ração para o meu pet?"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="8dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Socorro! Meu pet não quer mais comer ração!"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="8dp"/>
                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_alimentacao"
            android:layout_gravity="center"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="10dp"
            android:background="@color/CardColorBack"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/card_alimentacao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Saude"
                    android:background="@color/BackColorMenuDicasGreen"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="8dp"
                    android:textColor="@color/TextColorGreenBack"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Como cortar as unhas do seu cachorro"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="8dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mantendo a pele e pelagem de seu pet saudável"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="8dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Como identificar dor em cães?"
                        android:paddingVertical="8dp"
                        android:paddingHorizontal="8dp"/>
                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

</FrameLayout>